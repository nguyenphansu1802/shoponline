<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111210"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/user_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Form"
            android:textColor="#D54C42"
            android:textSize="36dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/UserName_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="232dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/customer_bg"
            android:ems="10"
            android:hint="Your phone"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PassWord_Login"
            android:padding="12dp"
            android:background="@drawable/customer_bg"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:hint="Password"
            android:layout_marginTop="304dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:text="New Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/New_Account"
            android:layout_marginLeft="250dp"
            android:textColor="#aaffffff"
            android:layout_marginTop="365dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autoLink="email|web"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="SIGN IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:id="@+id/btn_Login"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="408dp"
            android:textStyle="bold"
             />
        <Button
            android:text="SIGN OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:id="@+id/Logout"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="408dp"
            android:textStyle="bold"
            />
        <TextView
            android:text="Forget an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_ForgotPass"
            android:layout_marginRight="145dp"
            android:textColor="#aaffffff"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="480dp"
            android:textStyle="italic"
            android:autoLink="email|web"
           />
        <ImageView
            android:id="@+id/imageView_Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_Gmail"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/gmail_icon" />
        <ImageView
            android:id="@+id/imageView_Face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_Face"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="240dp"
            android:src="@drawable/fb_icon" />
    </RelativeLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111210"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="#2B41BC"
            android:textStyle="italic|bold"
            android:textSize="36dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your name:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/Name_SignUp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/btn_signup"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:text="Male"
            android:padding="10dp"
            android:layout_marginLeft="140dp"
            android:textColor="#171719"
            android:textStyle="bold"
            android:textSize="16dp"
            android:checked="true"
            android:background="@drawable/btn_signup"/>
        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:text="Female"
            android:padding="10dp"
            android:layout_marginLeft="280dp"
            android:textColor="#171719"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/btn_signup"/>
<!--        <EditText-->
<!--            android:id="@+id/UserName_SignUp"-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="140dp"-->
<!--            android:background="@drawable/btn_signup"-->
<!--            android:ems="10"-->
<!--            android:hint="User"-->
<!--            android:inputType="textPersonName"-->
<!--            android:padding="12dp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"

            />
        <EditText
            android:id="@+id/Password_SignUp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/btn_signup"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password again:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"

            />
        <EditText
            android:id="@+id/Password_SignUpAgain"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/btn_signup"
            android:ems="10"
            android:hint="Password Again"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your email:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"

            />
        <EditText
            android:id="@+id/Email_SignUp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/btn_signup"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your phone:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"

            />
        <EditText
            android:id="@+id/Phone_SignUp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/btn_signup"
            android:ems="10"
            android:hint="Phone"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Image:"
            android:textColor="#E5E6EC"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="false"
            />
        <ImageView
            android:id="@+id/ImageUser_SignUp"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_marginLeft="160dp"
            android:background="#5A8DE8"

            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:text="Choose Image"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:id="@+id/AddImage"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#151212"
            android:layout_marginLeft="160dp"
            android:padding="5dp"
            android:layout_marginTop="102dp"
            android:textStyle="bold"
            android:onClick="chooseImage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
       >
        <Button
            android:text="Sign Up"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="#68DA49"
            android:id="@+id/btn_SignUp"
            android:textColor="#0A0F77"
            android:layout_marginLeft="30dp"
            android:padding="5dp"

            android:textStyle="bold"
            />
        <Button
            android:text="Exit"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="#DA0707"
            android:id="@+id/btn_Exit"
            android:textColor="#070709"
            android:layout_marginLeft="240dp"
            android:padding="5dp"

            android:textStyle="bold"
            />
    </RelativeLayout>


</RelativeLayout>